<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme. -->
    <style name="Theme.FertilizerCalculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryDark">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorAccent">@color/md_theme_dark_secondary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="android:windowBackground">@color/md_theme_dark_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/md_theme_dark_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>